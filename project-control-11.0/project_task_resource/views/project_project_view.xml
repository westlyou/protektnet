<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="project_project_kanban_view" model="ir.ui.view">
        <field name="name">project.project.kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="total_planned"/>
            </field>
            <xpath expr="//div[hasclass('o_kanban_primary_left')]" position="after">
                <br/>
                <t name="total" t-if="record.total_planned.value" id="total_planned">
                    <span>
                        <strong><label>Total Planned: $</label></strong>
                        <t t-esc="record.total_planned.value"/>
                    </span>
                </t>
            </xpath>
        </field>
    </record>
    <record id="project_project_tree_view" model="ir.ui.view">
        <field name="name">project.project.tree</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="total_planned"/>
            </field>
        </field>
    </record>
</odoo>
