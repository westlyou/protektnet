<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_project_inherit_form" model="ir.ui.view">
        <field name="name">project.project.inherit.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="is_template"/>
            </xpath>
            <xpath expr="//field[@name='message_follower_ids']" position="after">
                <field name="message_ids" widget="mail_thread"/>
            </xpath>
        </field>
    </record>
    <template id="project_template_message" name="product_template_message">
        <span>Project created using template of: <a style="color: #008784; cursor: pointer;" data-oe-model="project.project" t-att-data-oe-id="self.id"><t t-esc="self.name"/></a></span>
    </template>
    <record id="project.open_view_project_all" model="ir.actions.act_window">
        <field name="context">{'search_default_standard_templates': 1}</field>
    </record>
    <record id="view_project_project_filter" model="ir.ui.view">
        <field name="name">project.project.templates</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_project_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after"> 
                <filter string="Standard Projects" name="standard_templates" domain="[('is_template', '=', False)]"/>
                <filter string="Project Templates" name="project_templates" domain="[('is_template', '=', True)]"/>
                <separator/>
            </xpath>
        </field>
    </record>
</odoo>
