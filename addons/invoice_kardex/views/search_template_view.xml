<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="search_template_date_filter">
                <span class="fa fa-calendar"/>
                Today: 
                <span class="js_format_date">
                    <t t-esc="options['date']['date_today']"/>
                </span>
                <span class="caret"/>
        </template>
        <template id="search_template_partners">
            <a class="dropdown-toggle stock_partner_filter" data-toggle="dropdown" type="button">
                <span class="fa fa-partner-hunt"/>
                Partners
                <span class="caret"/>
            </a>
            <ul class="dropdown-menu o_filters_menu" role="menu">
                <li style="margin-left: 10px; margin-right: 10px;">
                    <select class="js_invoice_reports_partner_auto_complete" data-filter="partner_ids" multiple="multiple" style="min-width: 100px;">
                        <t t-as="a" t-foreach="partner_ids">
                            <option t-att-value="a[0]">
                                <t t-esc="a[1]"/>
                            </option>
                        </t>
                    </select>
                </li>
            </ul>
        </template>
        <template id="search_template">
            <div class="btn-group o_dropdown o_invoice_reports_filter_date">
                <t t-call="invoice_kardex.search_template_date_filter"/>
            </div>
            <div class="btn-group o_dropdown o_invoice_reports_filter_partner" t-if="options.get('partner') != None">
                <t t-call="invoice_kardex.search_template_partners"/>
            </div>
        </template>
    </data>
</odoo>